# ==================== إعدادات التليجرام ====================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=@your_channel_name

# ==================== إعدادات قاعدة البيانات ====================
DATABASE_URL=sqlite:///news.db

# ==================== إعدادات التخزين المؤقت ====================
CACHE_ENABLED=true
CACHE_DURATION=3600
CACHE_DIR=cache

# ==================== إعدادات الشبكة ====================
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=5

# ==================== إعدادات Render ====================
RENDER=true
LOG_LEVEL=INFO 